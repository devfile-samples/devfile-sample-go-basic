{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["gomod"],
  "gomod": {
    "fileMatch": ["go\\.mod$", "go\\.sum$"]
  },
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "groupName": "go dependencies",
      "groupSlug": "go-deps",
      "commitMessageTopic": "Go {{depName}}"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}